{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "erasableSyntaxOnly": false,
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022"
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "jest.setup.ts"
  ]
}
